{
  "title": {
    "type": "string",
    "description": "Main blog post title",
    "maxLength": 100,
    "required": true,
    "pattern": "^.+: Tutorial Complet$"
  },
  "content": {
    "type": "string",
    "description": "Full blog post content in markdown format",
    "minLength": 2000,
    "required": true,
    "sections": [
      {
        "name": "TL;DR",
        "required": true,
        "description": "Quick summary of what will be accomplished"
      },
      {
        "name": "Prérequis",
        "required": true,
        "description": "List of required tools, knowledge, and setup"
      },
      {
        "name": "Installation et Setup Initial",
        "required": true,
        "description": "First step with installation commands"
      },
      {
        "name": "Configuration de Base",
        "required": true,
        "description": "Basic configuration files and settings"
      },
      {
        "name": "Implémentation Core",
        "required": true,
        "description": "Main implementation with complete working code"
      },
      {
        "name": "Tests et Validation",
        "required": true,
        "description": "How to test and verify the implementation works"
      },
      {
        "name": "Optimisation et Production",
        "required": true,
        "description": "Production considerations and optimizations"
      },
      {
        "name": "Troubleshooting",
        "required": true,
        "description": "Common issues and their solutions"
      },
      {
        "name": "Next Steps",
        "required": true,
        "description": "Advanced features and further learning resources"
      }
    ]
  },
  "excerpt": {
    "type": "string",
    "description": "Brief summary of the tutorial",
    "maxLength": 200,
    "required": true
  },
  "categories": {
    "type": "array",
    "items": {
      "type": "string",
      "enum": [
        "Tutorials & Setup",
        "DevOps & CI/CD",
        "Performance & Debugging",
        "Security & Authentication",
        "Database & Backend",
        "Frontend & Tools",
        "Cloud & Infrastructure"
      ]
    },
    "minItems": 1,
    "maxItems": 2,
    "required": true
  },
  "tags": {
    "type": "array",
    "items": {
      "type": "string"
    },
    "minItems": 3,
    "maxItems": 8,
    "required": true,
    "defaultTags": [
      "tutorial",
      "setup",
      "guide",
      "step-by-step",
      "practical"
    ]
  }
}
